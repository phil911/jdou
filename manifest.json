{
  "name": "Jdou书评",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "京东豆瓣书评插件，在京东购物页面显示豆瓣书评",
  "browser_action": {
    "default_icon": "icon.png" ,
    "default_title": "Jdou书评",
    "default_popup": "popup.html"
  },
  "permissions": [
    "notifications",
    "activeTab",
    "tabs",
    "http://*.jd.com/*"
  ],
  "background": {
    "page":"background.html",
    "persistent": false
  },
   "content_scripts": [
    {
      "matches": ["http://*.jd.com/*"],
      "css": ["style.css"],
      "js": ["jquery-1.11.3.min.js", "content.js","comment.js"]
    }
  ]
}
